#
# Quick generate of local genesis batch file.
#

info() {
    echo -e "\033[0;36m\n[--- $1 ---]\n\033[0m"
}

info 'Generate and copy hbzkproc executable'

top_dir=$(cd $(dirname $(dirname $0)) && pwd)

docker run -it --rm \
	-v $top_dir/zkPROC/hashblock_zkproc/:/project/hashblock_exchange \
	-v $top_dir/libs:/hashblock/libs \
	hashblock-dev-zkproc \
	bash -c "rm -Rf build && mkdir build && cd build && cmake .. && make && strip --strip-unneeded hbzkproc && cp hbzkproc /hashblock/libs && cd .. && rm -r build"

