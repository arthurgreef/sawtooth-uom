
# Build: docker build -f docker/hashblock-zkproc . -t hashblock-dev-zkproc:latest
# Run: bin/devproc
# Run: docker run -it --rm -v %CD%/zkPROC/hashblock_zkproc/:/project/hashblock_exchange hashblock-dev-zkproc bash

FROM ubuntu:xenial

WORKDIR /root

# install prerequisite
RUN apt-get update && \
    apt-get install -y \
    wget unzip curl \
    build-essential cmake git nano autoconf automake libtool pkg-config \
    bsdmainutils libssl-dev libevent-dev libgmp3-dev libzmq-dev && \
    git clone https://github.com/zcash/zcash.git


WORKDIR /root/zcash

RUN ./zcutil/build.sh -j$(nproc) && \
    ./zcutil/fetch-params.sh --testnet

WORKDIR /project/hashblock_exchange
